{
  "name": "Announcement Bar",
  "class": "announcement-section",
  "settings": [
    {
        "type": "header",
        "content": "Announcement bar"
    },
    {
        "type": "richtext",
        "id": "promo_text",
        "label": "Text",
        "info": "Maximum character limit is 170"
    },
    {
        "type": "checkbox",
        "id" : "enable",
        "label" : "Enable"
    },
    {
        "type" : "text",
        "id" : "text",
        "label" : "Text"
    },
    {
        "type" : "url",
        "id" : "url",
        "label" : "Link"
    },
    {
        "type" : "text",
        "id" : "mobile_text",
        "label" : "Mobile Text"
    },
    {
        "type" : "url",
        "id" : "mobile_url",
        "label" : "Mobile Link"
    },
    {
        "type" : "color",
        "id" : "bg",
        "label" : "Background"
    },
    {
        "type" : "color",
        "id" : "text_color",
        "label" : "Text Color"
    }

    ]
}
