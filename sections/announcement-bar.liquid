
{% if section.settings.promo_text != blank %}
<div class="promo_banner">
    <div class="promo_banner__content">
        {{ section.settings.promo_text }}
    </div>
    <div class="promo_banner-close"></div>
</div>
{% endif %}
{% if section.settings.enable %}
<div class="announcement-bar" style="background: {{ section.settings.bg }}">
    <div class="container">
        <div class="announcement-bar__text" style="color: {{ section.settings.text_color }}">
            <a href="{{ section.settings.url }}">{{ section.settings.text }}</a>
            <div class="mobile-text">
                <a href="{{ section.settings.mobile_url }}" >{{ section.settings.mobile_text }}</a>
            </div>
        </div>
    </div>
</div>
{% endif %}

